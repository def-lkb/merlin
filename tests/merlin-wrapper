#!/usr/bin/env bash

export PATH=$(dirname dot-merlin-reader):$PATH

src_dir="$(dirname ${BASH_SOURCE[0]})/.."
cd "$src_dir"
src_dir=$(pwd -P)
cd - > /dev/null
touch .merlin && ocamlmerlin "$@" \
    | jq 'del(.timing)' \
    | sed -e "s:$src_dir/::g" \
    | sed -e 's:"[^"]*lib/ocaml:"lib/ocaml:g' \
    | sed -e 's:"/.*/\(\.opam\|opam2\)/[^/]*/\([^"]*\)":"~opam/\2":g' \
    | sed -e 's:\\n:\
:g'
